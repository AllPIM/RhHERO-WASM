<MudTimelineItem Color="Color.Primary" TimelineAlign="TimelineAlign.End">
    <ItemOpposite>
        <MudText Color="Color.Primary" Typo="Typo.h6">@StartMonth</MudText>
        <MudText Color="Color.Default" Typo="Typo.body2" Class="mud-text-secondary">@UpdatedDate｜@UpdatedTime</MudText>
    </ItemOpposite>
    <ItemContent>
        <MudPaper Elevation="0" Class="mt-n1">
            <MudText Color="Color.Primary" Typo="Typo.h6" GutterBottom="true">@Title</MudText>
            <MudText Typo="Typo.body1">@Body1</MudText>
            <MudText Typo="Typo.body2">@Body2</MudText>
        </MudPaper>
    </ItemContent>
</MudTimelineItem>

@code
{
    [Parameter] public string? StartMonth { get; set; }
    [Parameter] public string? UpdatedDate { get; set; }
    [Parameter] public string? UpdatedTime { get; set; }
    [Parameter] public Color? DotColor { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Body1 { get; set; }
    [Parameter] public string? Body2 { get; set; }
}