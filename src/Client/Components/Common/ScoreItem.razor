<MudPaper Class="d-flex align-center justify-center mud-width-full pa-3 pl-6" Outlined="true" Square="true" Elevation="2">
    <MudGrid>
        <MudItem xs="6" Style="background-color:lightcoral" Class="align-center justify-center">
            <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">@UpdatedDate<br />@UpdatedTime</MudText>
        </MudItem>
        <MudItem xs="6" Style="background-color:silver" Class="align-center justify-center">
            <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Success"><strong>@Value</strong></MudText>
        </MudItem>
    </MudGrid>
</MudPaper>

@code
{
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Value { get; set; }
    [Parameter] public string? Description { get; set; }
    [Parameter] public string? UpdatedDate { get; set; }
    [Parameter] public string? UpdatedTime { get; set; }
}