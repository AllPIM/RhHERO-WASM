@inject IStringLocalizer<NavMenu> L

<PersonCard
    Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" />
<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Start"]</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">@L["Home"]</MudNavLink>
    <MudNavLink Href="/blank" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Apps">@L["Blank"]</MudNavLink>
    @if (_canViewDashboard)
    {
        <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Filled.Dashboard">@L["Dashboard"]</MudNavLink>
    }
    @if (_canViewPlayers || _canViewBots || _canViewMotorRacings || _canViewLuckyFruits || _canViewLuckyBags || _canViewFingerGuessings)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Fun Center"]</MudText>
        <MudNavGroup Title="@L["Motor Racing"]" Icon="@Icons.Filled.AddBox">
            @if (_canViewMotorRacings)
            {
                <MudNavLink Href="/funcenter/motorracings" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Motor Racings"]
                </MudNavLink>
            }
        </MudNavGroup>
        <MudNavGroup Title="@L["Lucky Fruit"]" Icon="@Icons.Filled.AddBox">
            @if (_canViewLuckyFruits)
            {
                <MudNavLink Href="/funcenter/luckyfruits" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Lucky Fruit"]
                </MudNavLink>
            }
        </MudNavGroup>
        <MudNavGroup Title="@L["Lucky Bag"]" Icon="@Icons.Filled.AddBox">
            @if (_canViewLuckyBags)
            {
                <MudNavLink Href="/funcenter/luckybags" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Lucky Bags"]
                </MudNavLink>
            }
        </MudNavGroup>
        <MudNavGroup Title="@L["Finger Guessing"]" Icon="@Icons.Filled.AddBox">
            @if (_canViewFingerGuessings)
            {
                <MudNavLink Href="/funcenter/fingerguessings" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Finger Guessings"]
                </MudNavLink>
            }
        </MudNavGroup>
        <MudNavGroup Title="@L["Players & Bots"]" Icon="@Icons.Filled.AddBox">
            @if (_canViewPlayers)
            {
                <MudNavLink Href="/funcenter/players" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Players"]
                </MudNavLink>
            }
            @if (_canViewBots)
            {
                <MudNavLink Href="/funcenter/bots" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Bots"]
                </MudNavLink>
            }
        </MudNavGroup>
    }
    @if (_canViewProducts || _canViewBrands)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Management"]</MudText>
        <MudNavGroup Title="@L["Catalog"]" Icon="@Icons.Filled.AddBox">
            @if (_canViewProducts)
            {
                <MudNavLink Href="/catalog/products" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Products"]
                </MudNavLink>
            }
            @if (_canViewBrands)
            {
                <MudNavLink Href="/catalog/brands" Icon="@Icons.Filled.ShoppingBag" Class="fsh-nav-child">
                    @L["Brands"]
                </MudNavLink>
            }
        </MudNavGroup>
    }
    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="ml-4 my-3">@L["Administrator"]</MudText>
        <MudNavGroup Title="@L["System Setup"]" Icon="@Icons.Filled.AddBox">
            @if (_canViewUsers)
            {
                <MudNavLink Match="NavLinkMatch.Prefix" Href="/users" Icon="@Icons.Material.Filled.PeopleAlt" Class="fsh-nav-child">@L["Users"]</MudNavLink>
            }
            @if (_canViewRoles)
            {
                <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.EmojiPeople" Class="fsh-nav-child">@L["Roles"]</MudNavLink>
            }
            @if (_canViewTenants)
            {
                <MudNavLink Href="/tenants" Icon="@Icons.Filled.GroupWork" Class="fsh-nav-child" Disabled="!_canViewTenants">@L["Tenants"]</MudNavLink>
            }
        </MudNavGroup>
        @if (_canViewHangfire)
        {
            <MudNavLink Href="@_hangfireUrl" Match="NavLinkMatch.All" Target="_blank" Icon="@Icons.Material.Filled.Work">@L["Hangfire"]</MudNavLink>
        }
    }
</MudNavMenu>